<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.filmlibrary.FilmEkleController">
    <children>
        <Label text="Film Bilgilerini Girin" />
        <TextField fx:id="filmNameField" promptText="Film Adı" />
        <TextField fx:id="filmYearField" promptText="Film Yılı" />
        <TextField fx:id="filmDirectorField" promptText="Yönetmen" />
        <Button text="Ekle" onAction="#addFilm" />
    </children>
</VBox>
