<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="474.0" prefWidth="494.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.filmlibrary.FilmEditController">
    <children>
        <Label text="Film Bilgilerini Güncelleyin">
            <font>
                <Font name="Kristen ITC" size="24.0" />
            </font></Label>
        <TextField fx:id="filmRatingField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="28.0" prefWidth="400.0" promptText="Bu filmi 10 üzerinden Değerlendirin!" />
        <TextField fx:id="filmDirectorField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="28.0" prefWidth="400.0" promptText="Yönetmen" />
        <TextField fx:id="filmGenreField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="28.0" prefWidth="400.0" promptText="Filmin Türü" />
        <TextField fx:id="filmYearField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="28.0" prefWidth="400.0" promptText="Yayın yılı" />
        <TextField fx:id="filmImdbField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="28.0" prefWidth="400.0" promptText="ImdB Puanı" />
        <TextField fx:id="filmLenghtField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="28.0" prefWidth="400.0" promptText="Filmin Süresi" />
        <TextField fx:id="filmProducerField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="28.0" prefWidth="400.0" promptText="Filmin Yapımcısı" />
        <TextField fx:id="filmLanguageField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="28.0" prefWidth="400.0" promptText="Filmin Orijinal Dili" />
        <TextField fx:id="filmCountryField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="28.0" prefWidth="400.0" promptText="Filmin Ülkesi" />
        <Button onAction="#saveEdit" prefHeight="28.0" prefWidth="111.0" text="Kaydet" />
    </children>
</VBox>
